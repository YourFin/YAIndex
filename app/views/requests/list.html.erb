<%= render "requests/wrapper" do %>
  <h2 class="subtitle is-3">Requests</h2>
  <nav class="level">
    <div class="level-left">
      <div class="level-item">
        <h2 class="subtitle is-5">Can't find what you're looking for? Put in a request!</h2>
      </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <%= link_to '<button class="button is-link">New Request</button>'.html_safe, :new_request %>
      </div>
    </div>
  </nav>
  <h2 class="subtitle is-4">Active requests:</h2>
  <table class="table is-fullwidth">
    <tr>
      <th>Created at</th>
      <th>Request</th>
    </tr>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.created_at %></td>
        <td><%= simple_format(request.body) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
